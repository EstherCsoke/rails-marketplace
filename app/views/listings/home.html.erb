<div class="text-center display-1 gothic-font letter-spacing">
   <h1>LATEST LISTINGS </h1>
 

</div>
<div class="container">
   <div class="row">
      <% @listings.limit(3).each do |listing| %>
      <div class="col-md-4">
         <div class="card mb-4 bg-light ">
 <%= image_tag listing.picture, class:"card-img-top" %> 
        
            <div class="card-body lato-font">
            <div class="text-center">
               <h5 class="card-title"><br><%= listing.title %></h5>
               <p class="card-text">$<%= listing.price %></p>
               <div class="text-center">
               <%= link_to "VIEW" , listing_path(listing.id), class: "btn btn-outline-light btn-lg"%>
</div>
               </div>
            </div>
         </div>
      </div>
      <% end %>
   </div>
</div>
