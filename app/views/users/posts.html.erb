<div class="container">
    <h1>Your Listings</h1>
    <div class="row small-box">
        <% current_user.listings.each do |listing|%>
        <div class="col-md-4 bg-grey ">
            <div class="card mb-4">
                <% if listing.picture.attached?%>
                <%= image_tag listing.picture, class:"card-img-top" %>
                <% else %>
                <%= image_tag("dronepng.png", alt:"drone", class: "card-img-top" )%>
                <% end %>
                <div class="card-body">
                    <div class="text-center">
                        <h5 class="card-title"><br><%= listing.title %></h5>
                        <p class="card-text">$<%= listing.price %></p>
                        <div class="text-center">
                            <br>
                            <%= link_to "View Listing", listing_path(listing) %>
                            <br>
                            <%= link_to "Edit Listing", edit_listing_path(listing) %>
                            <br>
                            <%= link_to "Delete", listing, method: :delete, data: { confirm: "Delete #{listing.title} listing?"}%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>