

<div class="container">
   <div class="row">
  <div class="col-sm-6 flex-column ">
    <h1>Profile Page </h1>
  
    <br>
    <% if current_user.avatar.attached? %>
   
        <%= image_tag current_user.avatar, class: "rounded-circle img-thumbnail" %>
        <% else %>
        <%= image_tag("profile/defaultimage.png", alt: "drone controller", class: "rounded-circle img-thumbnail") %>
<br>
    <% end %>
       <% if user_signed_in? %>
      <br>
    <%= link_to "Edit Profile Information", edit_user_registration_path %>
    <br>
    </div>
    <div class="col-sm-6 p-2 flex-column ">
      <%= link_to "Check inbox",  conversations_path %>
        <h4>Your current listings</h4>
        <% current_user.listings.each do |l|%>
        
        <%=  "title #{l.title}"   %>
        <br>
        category <%= l.category_id %>
        <br>
        <%= link_to "Edit Listing", edit_listing_path(l) %>
        <%= link_to "Delete", l, method: :delete, data: { confirm: "Delete #{l.title} listing?"}%>
        <br>
             

        <% end %>
        <% end %>
  
</div>
</div>
</div>
</div>


